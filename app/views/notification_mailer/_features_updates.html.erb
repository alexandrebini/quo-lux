<% if features.present? %>
  <% previous = features.first %>
  <% current = features.last %>

  <div>
    <strong>Features</strong>

    <ul>
      <% previous.each do |feature| %>
        <li style='color: red'><%= feature %></li>
      <% end %>
    </ul>

    <ul>
      <% current.each do |feature| %>
        <li style='color: green'><%= feature %></li>
      <% end %>
    </ul>
  </div>
<% end %>
